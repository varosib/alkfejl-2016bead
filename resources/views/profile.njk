{% extends "layout" %}

{% block content %}
<h2>Személyes adatok</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}

<form class="form-horizontal" method="post">

  {{ csrfField }}

<div class="form-group">
    <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" readonly="readonly" id="username" name="username" placeholder="Felhasználónév" value="{{ user.username }}">
    </div>
  </div>

  <div class="form-group">
    <label for="lastname" class="col-lg-2 control-label">Vezetéknév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" readonly="readonly" id="lastname" name="lastname" placeholder="Vezetéknév" value="{{ user.lastname }}">
    </div>
  </div>

  <div class="form-group">
    <label for="firstname" class="col-lg-2 control-label">Keresztnév</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" readonly="readonly" id="firstname" name="firstname" placeholder="Keresztnév" value="{{ user.firstname }}">
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="col-lg-2 control-label">Email</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="{{ user.email }}">
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Visszaállít</button>
      <button type="submit" class="btn btn-primary">Módosít</button>
    </div>
  </div>
</form>

{% endblock %}