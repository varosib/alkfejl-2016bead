{% extends "layout" %}

{% block content %}
<h2>Tantárgyaim</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="list" class="col-lg-2 control-label">Lista</label>
    <div class="col-lg-10">
      <select class="form-control" id="list" name="list">
        {% for check in checks %}
            {% if (check.user_id == currentUser.id) %}
                <option value="{{ check.id }}">{{ check.id }}</option>
            {% endif %}
        {% endfor %}
      </select>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-danger">Lead</button>
    </div>
  </div>
</form>

{% endblock %}