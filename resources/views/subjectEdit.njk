{% extends "layout" %}

{% block content %}
<h2>Tantárgy módosítása</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

<div class="form-group">
    <label for="code" class="col-lg-2 control-label">Tantárgy kódja</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="code" code="code" placeholder="Tantárgy kódja" value="{{ subject.code }}">
    </div>
  </div>

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Tantárgy neve</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Tantárgy neve" value="{{ subject.name }}">
    </div>
  </div>

  <div class="form-group">
    <label for="time" class="col-lg-2 control-label">Tantárgy ideje</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="time" time="time" placeholder="Tantárgy ideje" value="{{ subject.time }}">
    </div>
  </div>

  <div class="form-group">
    <label for="location" class="col-lg-2 control-label">Tantárgy helye</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="location" location="location" placeholder="Tantárgy helye" value="{{ subject.location }}">
    </div>
  </div>

  <div class="form-group">
    <label for="department_id" class="col-lg-2 control-label">Szak</label>
    <div class="col-lg-10">
      <select class="form-control" id="department_id" name="department_id">
        {% for department in departments %}
        <option value="{{ department.id }}"
          {% if department.id == old('department_id') %}
          selected
          {% endif %}
        >{{ department.name }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Visszaállít</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}