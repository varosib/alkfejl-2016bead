{% extends "layout" %}

{% block content %}
<h2>{{ subject.code }} {{ subject.name }}</h2>
<p>{{ subject.department.name }}</p>
<h3>Idő</h3>
<pre>
{{ subject.time }}
</pre>
<h3>Hely</h3>
<pre>
{{ subject.location }}
</pre>

{% if (subject.user_id == currentUser.id) %}
<a href="/subject/{{ subject.id }}/edit" class="btn btn-default">
    Szerkeszt
</a>
<a href="/subject/{{ subject.id }}/delete" class="btn btn-danger">
    Töröl
</a>
{% endif %}

{% endblock %}